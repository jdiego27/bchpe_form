<%- include('partials/_header'); -%>

<div class="jumbotron text-center mb-4 text-uppercase" style="margin-bottom:0">
    <h1 class="display-3">Recuperar Contrasena</h1>
</div>

<%- include('partials/_loginmessages'); -%>

<div class="container"> 
        <div class="row"> 
            <div class="col-md-4 offset-md-4">
                <div class="card mt-4">
                    <div class="card-header">
                        <div class="card-body">
                            <form action="/recovery-password/<%=token %>" method="POST">
                                <div class="form-group text-uppercase"> 
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" value="" required class="form-control">
                                <label for="password">Confirma Contraseña</label>
                                <input type="password" name="confirm" value="" required class="form-control">

                                <button type="submit" class="btn btn-primary btn-block mt-4" >
                                    Modificar Password
                                </button>
                                </div>
                            </form>
                        </div>
                    <div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer'); -%>