
<%- include('partials/_header'); -%>

<div class="jumbotron text-center mb-4 text-uppercase" style="margin-bottom:0">
    <h1 class="display-3">Form</h1>
</div>

<div class="container" style="margin-top: 30px;">
  
        <div class="row">
                <!--FORM-->
                <div class="col-md-12">
                  <div class="card">
                    <div class="card-body">
                      <form action="/add-form" method="POST">
                        <div class="form-group">
                          <label for="position">Posicion</label>
                          <input class="form-control" type="text" name="position" placeholder="" id="position" value="" required>
                          
                          <label for="district">Distrito</label>
                          <select class="form-control form-control-sm" id="district" name="district" value="" required>
                            <option></option>
                              <% for(var i=0; i < distr.length; i++){%>
                            <option><%= distr[i].district %></option>
                            <% } %>
                          </select>
                          
                          <label for="contact">Nombre de la Empresa / Persona</label>
                          <input class="form-control" type="text" name="contact" placeholder="" id="contact" value="" required>

                          <label for="ruc">Ruc</label>
                          <input class="form-control" type="text" name="ruc" placeholder="" id="ruc" value="" maxlength="11">

                          <label for="description.header">Breve Descripcion del trabajo</label>
                          <input class="form-control " type="text" name="description.header" placeholder="" id="description.header" value="" required>

                          <label for="description.line_1">Experiencia 1</label>
                          <input class="form-control " type="text" name="description.line_1" placeholder="" id="description.line_1" value="" required>

                          <label for="description.line_2">Experiencia 2</label>
                          <input class="form-control " type="text" name="description.line_2" placeholder="" id="description.line_2" value="" required>

                          <label for="description.line_3">Experiencia 3</label>
                          <input class="form-control " type="text" name="description.line_3" placeholder="" id="description.line_3" value="" required>

                          <label for="description.line_4">Experiencia 4</label>
                          <input class="form-control " type="text" name="description.line_4" placeholder="" id="description.line_4" value="" required>

                          <label for="description.line_schedule">Horario de trabajo</label>
                          <input class="form-control " type="text" name="description.line_schedule" placeholder="" id="description.line_schedule" value="" required>
                          
                          <label for="description.line_notes">Notas adicionales</label>
                          <input class="form-control " type="text" name="description.line_notes" placeholder="" id="description.line_notes" value="" required>

                          <label for="cellphone">Numero de Celular</label>
                          <input class="form-control " type="text" name="cellphone" placeholder="" id="cellphone" value="" required>

                          <label for="email">Email</label>
                          <input class="form-control " type="text" name="email" placeholder="" id="email">

                          <label for="salary">Sueldo Aprox. (SOLO NUMEROS)</label>
                          <input class="form-control " type="number" name="salary" placeholder="" id="salary">

                          <label for="posting_date">Fecha de publicacion (DD-MM-AA)</label>
                          <input class="form-control " type="text" name="posting_date" placeholder="" id="posting_date" value="" required>

                          <label for="vacancy">Vacante (SOLO NUMEROS)</label>
                          <input class="form-control " type="number" name="vacancy" placeholder="" id="vacancy" value="" required>

                        </div>
                        <button class="btn btn-primary btn-block " type="submit">Guardar</button>
                      </form>
                    </div>
                  </div>
                </div>
                 <!-- to the right text-->
            
              </div>       
            </div>

<%- include('partials/_footer'); -%>
              


